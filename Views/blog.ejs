<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" width="600px" alt="coverimage">
        <pre class="mt-3"><%= blog.body %></pre>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" alt=""> <%= blog.createdBy.fullName %>
        </div>
        <div class="container">
            <h2>Comments (<%= comments.length %>)</h2>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <input type="text" class="form-control" name="content" placeholder="enter your comment">
                    <button type="submit" class="btn btn-sm btn-primary">Add</button>
                </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImageUrl %>" width="30px" alt=""> <%= comment.createdBy.fullName %>: <pre><%= comment.content %></pre>

                    </div>
                <% }) %>
            </div>
        </div>

    </div>
    
    <%- include('./partials/script') %>
</body>
</html>
